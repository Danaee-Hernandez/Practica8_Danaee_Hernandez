/* Este programa sirve para saber si un numero diferente de cero es negativo o positivo*/

/*Declaracion de librerias*/
#include<stdio.h>

/*Declaracion de funcion principal*/
 int main(){
 	/*Declaracion de variables*/
 	int n;
 	/*Bloque de instrucciones*/
 	 printf("\n\n Escribe un numero diferente de cero: \t");
 	 scanf("%d",&n);
 	 
 	 if (n>0)
	  {
 	 	printf("\n\n\t (%d) es un numero positivo\n\n",n);	
	  }
	  else {
	  	printf("\n\n\t (%d) es un numero negativo\n\n",n);
	  }
 	 return 0;
 }
